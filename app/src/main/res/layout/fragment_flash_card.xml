<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".flashcard.FlashCardFragment">
    <FrameLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="269dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cat"
            android:scaleType="centerCrop"/>
        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_margin="24dp"
            android:src="@drawable/baseline_more_vert_24"
            android:background="@drawable/background_shape"
            />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="702dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/flashcard_background"
        >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="18dp"
                android:layout_marginVertical="14dp"
                >
                <TextView
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Text"
                    android:textSize="36sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/baloo2"
                    />
                <TextView
                    android:id="@+id/txt_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textAppearance="@style/text"
                    android:layout_toEndOf="@id/txt_title"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="14dp"
                    />
                <TextView
                    android:id="@+id/txt_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Number"
                    android:textAppearance="@style/text"
                    android:layout_below="@id/txt_title"/>

                <TextView
                    android:id="@+id/btn_quizz"
                    android:layout_width="95dp"
                    android:layout_height="37dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/button_shape"
                    android:text="Quiz"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/txt_description"
                    android:layout_width="376dp"
                    android:layout_height="51dp"
                    android:layout_marginTop="12dp"
                    android:text="This is description"
                    android:textAppearance="@style/text"
                    android:paddingTop="9dp"
                    android:paddingHorizontal="8dp"
                    android:background="@drawable/edittext_border_shape"
                    android:layout_below="@id/txt_num"/>
                <TextView
                    android:id="@+id/txt_term"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Term"
                    android:fontFamily="@font/baloo2"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:layout_below="@id/txt_description"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="6dp"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_flashcard"
                    android:layout_below="@+id/txt_term"/>
            </RelativeLayout>

    </RelativeLayout>


        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginHorizontal="24dp"
            android:layout_marginVertical="24dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            />

</androidx.constraintlayout.widget.ConstraintLayout>