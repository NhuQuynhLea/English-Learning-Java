<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quizz.QuizzFragment">
    <TextView
        android:id="@+id/txt_challenge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Challenge"
        android:fontFamily="@font/cherrybombone"
        android:textAppearance="@style/home"
        android:layout_centerHorizontal="true"
        />
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/txt_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Question"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/cabin"
        android:textSize="26sp"
        android:textColor="@color/black"
        android:layout_below="@id/imageView"/>
    <EditText
        android:id="@+id/edt_answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_question"
        android:layout_marginTop="142dp"
        android:layout_marginHorizontal="80dp"
        android:fontFamily="@font/cabin"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:hint="Type here..."
        android:gravity="center"
        />
    <TextView
        android:id="@+id/btn_answer"
        android:layout_width="368dp"
        android:layout_height="51dp"
        android:text="Next"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo2"
        android:gravity="center"
        android:layout_marginTop="55dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_shape"
        android:elevation="18dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="30dp"
        />

    <TextView
        android:id="@+id/txt_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="56dp"
        android:text="Score"
        android:textColor="#7A37BE"
        android:textSize="24dp" />

</RelativeLayout>