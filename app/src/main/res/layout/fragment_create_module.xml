<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".mylist.CreateModuleFragment">
    <TextView
        android:id="@+id/txt_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Module"
        android:fontFamily="@font/cherrybombone"
        android:textAppearance="@style/home"
        android:layout_centerHorizontal="true"
        />

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="12dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="267dp"
        android:layout_height="153dp"
        android:layout_below="@id/btn_back"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="#D9D9D9"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="223dp"
            android:layout_height="118dp"
            android:layout_marginHorizontal="22sp"
            android:layout_below="@id/btn_back"
            android:layout_marginVertical="17dp"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/btn_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose image"
        android:textColor="#7A37BE"
        android:textSize="22dp"
        android:fontFamily="@font/baloo2"
        android:layout_below="@id/cardView"
        android:gravity="end"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"/>
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_image"
        android:text="Title"
        android:fontFamily="@font/baloo2"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginTop="26dp"
        android:layout_marginStart="36dp"
        />
    <EditText
        android:id="@+id/edt_title"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:hint="Title"
        android:layout_below="@id/txt_title"
        android:layout_marginHorizontal="30dp"
        android:paddingStart="16dp"
        android:background="@drawable/edittext_border_shape"/>
    <TextView
        android:id="@+id/txt_discription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edt_title"
        android:text="Description"
        android:fontFamily="@font/baloo2"
        android:textSize="22sp"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:layout_marginStart="36dp"
        />
    <EditText
        android:id="@+id/edt_description"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:hint="Description"
        android:layout_below="@+id/txt_discription"
        android:layout_marginHorizontal="30dp"
        android:paddingStart="16dp"
        android:background="@drawable/edittext_border_shape"/>
    <TextView
        android:id="@+id/btn_save"
        android:layout_width="368dp"
        android:layout_height="51dp"
        android:text="Save"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:fontFamily="@font/baloo2"
        android:gravity="center"
        android:layout_marginTop="55dp"
        android:layout_below="@id/edt_description"
        android:background="@drawable/button_shape"
        android:elevation="18dp"
        android:layout_marginHorizontal="30dp"
        />

</RelativeLayout>